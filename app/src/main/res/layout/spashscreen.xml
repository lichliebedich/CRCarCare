        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/desc"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

</LinearLayout>
