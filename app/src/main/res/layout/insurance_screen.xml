<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SkyBlue"
    tools:context="crcarcare.datasolution.app.crcarcare.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

<LinearLayout
    android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#6F4E37"
    android:paddingBottom="5dip"
    android:paddingTop="5dip" >

                 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_license_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ทะเบียนรถ :"
                android:textColor="#c4c4c4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_license1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:maxLength="3"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="สย"
                android:textColor="#c4c4c4"
                android:textSize="20sp"
                android:textStyle="bold" />

             <EditText
                 android:id="@+id/et_license2"
                 android:layout_width="80dp"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:inputType="number"
                 android:maxLength="4"
                 android:selectAllOnFocus="true"
                 android:singleLine="true"
                 android:text="1301"
                 android:textColor="#c4c4c4"
                 android:textSize="20sp"
                 android:textStyle="bold" />

            <Button
                android:id="@+id/bn_SearchOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="#c4c4c4"/>

        </LinearLayout>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tv_userlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="60dp"
        android:text="กรมธรรม์เลขที่"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:text="วันที่สิ้นสุดประกัน"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
 		 
 		 <ListView
 		     android:id="@+id/list"
 		     android:layout_width="match_parent"
 		     android:layout_height="match_parent"
             android:background="#d8f3ff"
 		     android:paddingLeft="10dp"
 		     android:paddingTop="10dp"
 		     android:textAlignment="center" >

        </ListView>
 		
        
    </LinearLayout>

     

</RelativeLayout>